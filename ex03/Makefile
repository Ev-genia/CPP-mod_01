NAME	=	humans

SRCS	=	main.cpp	Weapon.cpp	HumanA.cpp	HumanB.cpp

OBJS	=	${SRCS:.cpp=.o}

HEADER	=	Weapon.hpp	HumanA.hpp	HumanB.hpp

CC		=	clang++

CFLAGS	=	-Wall -Wextra -Werror -std=c++98

RM		=	rm -f

.PHONY	:	all clean fclean re

${NAME}	:	${OBJS}
			${CC} ${CFLAFS} ${SRCS} -o ${NAME}

all		:	${NAME}

clean	:
			${RM} ${OBJS}

fclean	:	clean
			${RM} ${NAME}

re		:	fclean all